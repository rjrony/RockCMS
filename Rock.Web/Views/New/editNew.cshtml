@{
    ViewBag.Title = "editNew";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form id="EditNewForm" action="">
</form>
@section BottomScript
{
    <script type="text/javascript" src="@Url.Content("/Resources/js/RockDataForm.js")"></script>
    <script type="text/javascript">
        $(function () {

            var dialog = frameElement.dialog;
            var dialogData = dialog.get('data');

            var form = $("#EditNewForm").RockDataForm({
                inputWidth: 170, labelWidth: 90, space: 40,
                fields: [
                            { display: "新闻标题", name: "Title", newline: true, type: "text", width: 300, group: "基础信息" },
                            { display: "新闻正文 ", name: "Content", newline: true, type: "text", width: 240 },
                            ],
                url: "/new/editnews/" + dialogData.ID
            });
            form.setData();
        });  
    </script>
}
